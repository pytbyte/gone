  margin: 15px auto;
  padding: 15px 45px;
  width: 100%;
  font-size: 14px;
  font-weight: bold;
  cursor: pointer;
  opacity: 1;
  visibility: visible;
  -webkit-transition: all 0.3s ease;
}
.form-structor .signup .submit-btn:hover {
